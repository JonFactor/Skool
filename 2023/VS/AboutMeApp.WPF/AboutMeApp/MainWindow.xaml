<Window x:Class="AboutMeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AboutMeApp"
        mc:Ignorable="d"
        Title="About Me" Height="450" Width="800">
    <Grid>
        <TextBox FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" TextWrapping="Wrap" Text="About Me" />
        <StackPanel Grid.Row="1" Margin="20">
            <Image Source="download.jpg"
                   Height="100" Margin="0,0,0,10" HorizontalAlignment="Left" Width="100"/>
            <TextBlock Text="Name: " />
            <TextBox Text="John Doe" x:Name="txtName" />
            <TextBlock Text="Hobby: " Margin="0, 10, 0, 0" />
            <TextBox Text="Reading" x:Name="txtHobby" />
            <TextBlock Text="Favorite Color: " Margin="0, 10, 0, 0" />
            <TextBox Text="Blue" x:Name="txtColor"/>
            <Button x:Name="btnSave" Content="Save" Height="160" Width="758" Click="btnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
